<%= content_for(:title,  '行情监管 | BLOCK') %>
<section class="content-header">
  <h1>
    行情监管 <small>预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-btc"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-balance-scale"></i> 行情监管</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_backend_regulate_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加监管</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">交易所</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">指标</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">通知</th>
              <!-- <th tabindex="0" aria-controls="example1" style="text-align: center">交易</th> -->
              <th tabindex="0" aria-controls="example1" style="width: 120px;">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @regulates.each do |item| %>
              <tr style="text-align: center">
                <td>
                  <%= item.market.class.to_s.upcase %><br>
                  <%= item.market.quote_unit + "-" + item.market.base_unit %><br><br>
                  价格精度：<%= item.price_precision %><br>
                  数量精度：<%= item.amount_precision %>
                </td>
                <td style="text-align: left">
                   24H浮动： <%= item.amplitude %><br>
                   持有头寸： <%= item.retain %> <%= item.market.quote_unit %><br>
                   交易资金： <%= item.cost %> <%= item.market.base_unit %><br>
                   阻力位价： <%= item.resistance %><br>
                   支撑位价： <%= item.support %><br>
                </td>
                <td>
                  钉钉：<input type="checkbox" name="my-state" <%= 'checked' if item.notify_dd %> onchange='switch_state(<%= item.id %>, "dd")'></br>
                  微信：<input type="checkbox" name="my-state" <%= 'checked' if item.notify_wx %> onchange='switch_state(<%= item.id %>, "wx")'></br>
                  短信：<input type="checkbox" name="my-state" <%= 'checked' if item.notify_sms %> onchange='switch_state(<%= item.id %>,"sms")'>
                </td>
                <!-- <td style="text-align: left">
                  快频：<input type="checkbox" name="my-state" <%= 'checked' if item.fast_trade %> onchange='switch_state(<%= item.id %>, "fast")'>&nbsp;
                  现金： <%= item.fast_cash %><%= item.market.base_unit %>&nbsp;
                  收益： <%= item.fast_profit %>%&nbsp;<br>
                  支阻：<input type="checkbox" name="my-state" <%= 'checked' if item.range_trade %> onchange='switch_state(<%= item.id %>, "range")'>&nbsp;
                  现金： <%= item.range_cash %><%= item.market.base_unit %>&nbsp;
                  收益： <%= item.range_profit %>%&nbsp;
                </td>
 -->                <td><br>
                  <a href="<%= edit_backend_regulate_path(item) %>" class="btn bg-orange btn-flat">
                    <i class="glyphicon glyphicon-edit"></i>
                  </a>
                  <a href="<%= backend_regulate_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除吗？">
                    <i class="glyphicon glyphicon-trash"></i>
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：「<%= @regulates.count %>」</h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
          <%= will_paginate @regulates, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% content_for :script_footer do %>
  <script type="text/javascript">
    function switch_state(id,kind) {
      $.get('/backend/regulates/' + id +'/change_state?kind=' + kind);
    }
    $("[name='my-state']").bootstrapSwitch({onColor:'success',offColor:'danger', onText: '开', offText: '关'});
  </script>
<% end %>